<% layout('layouts/boilerplate')%>

<h1>All Friends</h1>
<div class="row">
	<% for (let friend of friends){ %> <%if (!currentUser ||
	friend._id.toString()!=currentUser._id.toString()) {%>
	<div class="card mt-2 mr-5 col-6 col-md-3">
		<div class="card-body">
			<h5 class="card-title">Name : <%= friend.username %></h5>
			<h6 class="card-subtitle mb-2 text-muted">Age : <%= friend.age %></h6>

			<a
				href="/findfriends/<%= friend._id %>"
				class="card-link btn btn-primary mt-2"
				>Show Profile
			</a>
			<a href="/chat/<%= friend._id %>" class="card-link btn btn-primary mt-2"
				>Chat
			</a>
		</div>
	</div>

	<% }} %>

	<script
		src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
		integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
		crossorigin="anonymous"
	></script>
</div>
