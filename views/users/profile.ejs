<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="../../public/css/style.css" />
<div class="container">
	<div class="profile mt-5">
		<% if(currentUser){ %>
		<div class="name">Name : <%= currentUser.username %></div>
		<div class="email">Email Id : <%= currentUser.email %></div>
		<div class="age">Age : <%= currentUser.age %></div>
		<div class="location">Location : <%= currentUser.location %></div>

		<% } %>
	</div>
	<div class="card contain">
		<div class="card-body">
			<h4 class="card-title app-title">Weather</h4>
		</div>
		<div class="notification"></div>
		<div class="weather-container">
			<div class="weather-icon">
				<img
					src="../../public/images/icons/unknown.png"
					alt=""
					class="card-img-top"
				/>
			</div>
			<div class="temperature-value">
				<p>- Â°<span>C</span></p>
			</div>
		</div>
	
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<div class="temperature-description">
					<p>-</p>
				</div>
			</li>
			<li class="list-group-item">
				<div class="location">
					<p>-</p>
				</div>
			</li>
		</ul>
	</div>
</div>

<script src="../../public/js/app.js"></script>
